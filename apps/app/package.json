{
  "name": "@bubble/app",
  "description": "Bubble-life is a NodeJs project for various device. He can inform you of the weather, the time or your calendar. All this with Bubble who will live this life according to your modules.",
  "main": "app/background.js",
  "scripts": {
    "build": "nextron build",
    "build:all": "nextron build --all",
    "build:linux": "nextron build --linux",
    "build:mac": "nextron build --mac --x64",
    "build:win32": "nextron build --win --ia32",
    "build:win64": "nextron build --win --x64",
    "dev": "nextron",
    "format": "prettier --write \"./**/*.{ts,tsx}\"",
    "postinstall": "electron-builder install-app-deps",
    "lint": "cd renderer && cross-env TIMING=1 next lint --fix",
    "start": "set NODE_ENV=production && nextron"
  },
  "dependencies": {
    "@bubble/styles": "*",
    "@bubble/translate": "*",
    "@bubble/ui": "*",
    "@reduxjs/toolkit": "^1.8.0",
    "animejs": "^3.2.1",
    "dayjs": "^1.11.0",
    "electron-serve": "^1.1.0",
    "electron-store": "^8.0.1",
    "react-fps-stats": "^0.2.3",
    "react-redux": "^7.2.6",
    "react-toast-notifications": "^2.5.1",
    "redux": "^4.1.2",
    "redux-persist": "^6.0.0",
    "shortid": "^2.2.16"
  },
  "devDependencies": {
    "@bubble/config": "*",
    "@bubble/tsconfig": "*",
    "@types/animejs": "^3.1.4",
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.41",
    "@types/react-dom": "^17.0.14",
    "@types/react-toast-notifications": "^2.4.1",
    "@types/shortid": "^0.0.29",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "dotenv-flow": "^3.2.0",
    "electron": "17.1.2",
    "electron-builder": "^22.14.13",
    "eslint": "^8.11.0",
    "eslint-config-next": "^12.1.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.3.0",
    "next": "^12.1.0",
    "next-compose-plugins": "^2.2.1",
    "next-transpile-modules": "^9.0.0",
    "nextron": "^8.0.0",
    "prettier": "^2.6.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.6.2"
  }
}
