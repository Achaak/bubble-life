doctype html
html
    head
        title #{opts.title}

        // CSS
        link(rel="stylesheet" type="text/css" href="#{opts.pathCSS}")
        link(rel="stylesheet" type="text/css" href="/build/bubble/main/product.min.css")
        link(rel="stylesheet" type="text/css" href="/build/components.min.css")
        each val, index in opts.components.css
            link(rel="stylesheet" type="text/css" href="#{val}")
            
        // META
        meta(charset='utf-8')
        meta(name='description', content='"#{opts.description}')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
        meta(name="robots" content="index,follow")

        // ICON
        link(rel="icon" href="#{opts.hrefIcon}")

        // OG
        meta(property="og:title"       content="#{opts.openGraph.title}")
        meta(property="og:description" content="#{opts.openGraph.description}")
        meta(property="og:image"       content="#{opts.openGraph.image}")
        meta(property="og:type"        content="#{opts.openGraph.type}")
        meta(property="og:url"         content="#{opts.openGraph.url}")

    body
        .top_bar
        .top_left
        .top_right

        // Bubble
        .bubble-frame
            .floor
            .bubble-ctner
                .bubble
                    object.body(type="image/svg+xml",data="/ressources/images/bubble/body/body.svg")
                    .eyes
                    .mouse
                    .clothes
                    
        .bottom_left
        .bottom_right
        .bottom_bar

        // Script JS
        script(src="/build/components.min.js")
        script(src="/socket.io/socket.io.js")
        script(src="/config.js")
        script(src="/build/bubble/main/product.min.js")
        script(src="#{opts.pathJS}")
        each val, index in opts.components.js
            script(src="#{val}")
        script(src="/module_config.js")
        script(src="reload/reload.js")