{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "dist",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "baseUrl": ".",
    "noUnusedLocals": true,
    "paths": {
      "@src/*": ["./src/*"],
    },
    "typeRoots": [
      "./node_modules/@types/"
    ],
  },
  "include": [
    "**/*.ts",
    "."
  ],
  "exclude": [
    "dist",
    "node_modules",
  ]
}