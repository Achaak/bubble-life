    "@pnpm/sort-packages": "^3.0.0",
    "@types/node": "^17.0.23",
    "cross-env": "^7.0.3",
    "eslint": "^8.13.0",
    "prettier": "^2.6.2",
    "ts-node": "^10.7.0",
    "typescript": "4.5.5"
  }
}
