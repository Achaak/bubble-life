{
  "name": "@bubble/translate",
  "version": "1.0.0",
  "author": "Axel Lavoie <axel.lavoi@gmail.com>",
  "main": "./src/index.ts",
  "files": [
    "src/**/*"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.{ts,tsx}\"",
