  "devDependencies": {
    "@bubble/scripts": "workspace:*",
    "@bubble/tsconfig": "workspace:*",
    "@pnpm/sort-packages": "^3.0.7",
    "@types/node": "^18.7.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.21.0",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "4.7.4"
  }
}
