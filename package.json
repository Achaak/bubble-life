{
  "name": "bubble-life",
  "version": "1.0.0",
  "author": "Axel Lavoie <axel.lavoi@gmail.com>",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "start": "turbo run start",
    "start:app": "turbo run start --scope=@bubble/app --scope=@bubble/server --scope=@bubble/controller",
    "build": "turbo run build",
    "build:app": "turbo run build --scope=@bubble/app --scope=@bubble/server --scope=@bubble/controller",
    "dev": "turbo run dev",
    "dev:app": "turbo run dev --scope=@bubble/app --scope=@bubble/server --scope=@bubble/controller",
    "lint": "turbo run lint",
    "format": "turbo run format"
  },
  "devDependencies": {
    "prettier": "^2.6.1",
    "turbo": "^1.1.10"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "yarn@3.2.0"
}
